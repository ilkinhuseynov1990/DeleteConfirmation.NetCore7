@using Confirm.Models
@model List<Student>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://kit.fontawesome.com/7693313d56.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" />
    <title>Student List</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Student List
                </h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Surname</th>
                            <th scope="col">Age</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @if (Model.Any())
                        {
                            @foreach (var stu in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@stu.Name</td>
                                    <td>@stu.Surname</td>
                                    <td>@stu.Age</td>
                                    <td>
                                        <i class="fas fa-trash delete" style="color:red; cursor:pointer"></i>
                                        <input type="hidden" value="@stu.Id">
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    not record yet.
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="backgroudCover">
        <div class="containerConfirmation">
            <div class="closeBtn">
                <div class="close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            <div class="infoMessage">
                <div class="closeIcon">
                    <i class="fas fa-times"></i>
                </div>
            </div>

            <div class="confirmText">
                <h1>Are you Sure ?</h1>
                <div class="informationMessage">
                    <p>
                        Do you really want to delete these records?
                        This process cannot be undone.
                    </p>
                </div>
            </div>

            <div class="buttons">
                <div class="centerBtn">
                    <button class="cancel">Cancel</button>
                    <button class="deleteData">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            let modal = $(".backgroudCover");
            let studentId = 0;

            $(".delete").click(function () {
                modal.show();
                studentId = $(this).next().val();

            })

            $(".close").click(function () {
                modal.hide();
            })

            $(".deleteData").click(function () {
                $.ajax({
                    url: "/Home/DeleteStudent?studentId=" + studentId,
                    type:"post",
                    success:function(res){
                        if (res.statusCode == 200) {
                            modal.hide();
                            window.location.href = "/Home/Index";
                        }
                    }
                })
            })
        })
    </script>
</body>
</html>
